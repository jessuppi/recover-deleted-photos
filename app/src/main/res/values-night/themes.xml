<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- dark mode variant for recover deleted photos -->
    <style name="Theme.RecoverDeletedPhotos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- keep base theme attributes -->
        <item name="colorPrimary">@color/md_seed</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorOutline">@color/md_outline</item>

        <!-- make sure toolbar uses tinted style -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Tinted</item>
    </style>

    <!-- toolbar style reused from the light theme -->
    <style name="Widget.App.Toolbar.Tinted" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurface</item>
        <item name="navigationIconTint">?attr/colorOnSurface</item>
        <item name="android:theme">@style/ThemeOverlay.App.Toolbar.Surface</item>
        <item name="popupTheme">@style/ThemeOverlay.App.Toolbar.Popup</item>
    </style>

    <!-- toolbar overlay in dark mode -->
    <style name="ThemeOverlay.App.Toolbar.Surface" parent="ThemeOverlay.Material3.ActionBar">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
    </style>

    <!-- popup overlay in dark mode -->
    <style name="ThemeOverlay.App.Toolbar.Popup" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Theme overlay to force controls (like checkbox outline) to white for high contrast -->
    <style name="ThemeOverlay.App.Checkbox.Light" parent="ThemeOverlay.Material3">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorOnSurface">@android:color/white</item>
    </style>

</resources>
