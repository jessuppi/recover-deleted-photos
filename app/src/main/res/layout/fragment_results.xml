<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="0dp"
    android:paddingBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- top sorting/filtering section containing dropdown for sorting results -->
    <LinearLayout
        android:id="@+id/sortBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/md_surface_variant"
        android:elevation="1dp"
        android:layout_marginBottom="8dp">

        <!-- spinner control that allows user to sort results by date, size, or name -->
        <Spinner
            android:id="@+id/sortDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:prompt="@string/results_title" />
    </LinearLayout>

    <!-- main content area showing recycler view list of recovered images or empty state -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- grid or list of media results displayed dynamically -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="72dp" />

        <!-- message shown when there are no results to display -->
        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/empty_art"
            android:visibility="gone" />
    </FrameLayout>

    <!-- bottom recover button used to restore selected files -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/recoverButton"
        style="?attr/materialButtonTonalStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:minHeight="48dp"
        android:text="@string/recover_selected"
        android:textColor="@color/recover_button_text"
        android:backgroundTint="@color/recover_button_disabled_bg"
        android:enabled="false" />
</LinearLayout>
