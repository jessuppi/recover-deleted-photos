<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_surface">

    <!-- top app bar (material toolbar) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:title="@string/app_name"
        android:background="@color/md_toolbar_background"
        
        <!-- Setting these colors directly ensures high contrast against md_toolbar_background (White) -->
        app:titleTextColor="@color/md_toolbar_tint"
        app:subtitleTextColor="@color/md_toolbar_tint"
        app:navigationIconTint="@color/md_toolbar_tint"
        
        <!-- CRITICAL FIX: Explicitly set the tint for the action menu items (toggle icon, etc.) -->
        <!-- This overrides the white default and forces the dark md_toolbar_tint color. -->
        app:actionMenuIconTint="@color/md_toolbar_tint"
        app:actionMenuTextColor="@color/md_toolbar_tint" />

    <!-- main navigation host for fragments -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="true" />

</LinearLayout>
