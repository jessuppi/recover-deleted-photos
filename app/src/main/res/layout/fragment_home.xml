<?xml version="1.0" encoding="utf-8"?>
<!-- combined home screen: icon + captions + filter card + action button -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- app hero icon -->
    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_empty_state"
        android:contentDescription="@string/empty_art" />

    <!-- app title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_title"
        android:textAppearance="?attr/textAppearanceHeadlineSmall" />

    <!-- app subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/home_subtitle"
        android:textAppearance="?attr/textAppearanceBodyMedium" />

    <!-- message shown for unsupported android versions -->
    <TextView
        android:id="@+id/stateMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        tools:text="@string/android_13_required_msg" />

    <!-- card containing type selection -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/homeTypeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:shapeAppearanceOverlay="@style/Shape.App.Corner.Small">

        <!-- card content column -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <!-- card header label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_type_label"
                android:textAppearance="?attr/textAppearanceTitleSmall" />

            <!-- radio group for choosing file type -->
            <RadioGroup
                android:id="@+id/homeTypeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:theme="@style/ThemeOverlay.App.RadioButton.Inverted">

                <!-- photo option -->
                <RadioButton
                    android:id="@+id/homeTypePhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_photos"
                    android:checked="true" />

                <!-- video option -->
                <RadioButton
                    android:id="@+id/homeTypeVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/type_videos" />

                <!-- audio option -->
                <RadioButton
                    android:id="@+id/homeTypeAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/type_audio" />
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- home footer message -->
    <TextView
        android:id="@+id/homeFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/home_footer_message"
        android:textAppearance="?attr/textAppearanceBodySmall"
        android:textAlignment="center"/>

    <!-- primary action button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:minHeight="48dp"
        android:text="@string/start_scan" />

</LinearLayout>
