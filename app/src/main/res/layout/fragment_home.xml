<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_empty_state"
        android:contentDescription="@string/empty_art"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/title"
        android:text="@string/home_title"
        android:textAppearance="?attr/textAppearanceHeadlineSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/subtitle"
        android:text="@string/home_subtitle"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        tools:text="@string/android_13_required_msg" />

    <LinearLayout
        android:id="@+id/homeTypeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_type_label" />

        <RadioGroup
            android:id="@+id/homeTypeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/homeTypePhotos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type_photos"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/homeTypeVideos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/type_videos"/>

            <RadioButton
                android:id="@+id/homeTypeAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/type_audio"/>
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        style="@style/Widget.Material3.Button"
        android:layout_marginTop="24dp"
        android:text="@string/start_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
