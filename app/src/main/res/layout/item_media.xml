<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- square thumbnail -->
    <ImageView
        android:id="@+id/thumb"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_launcher_foreground"
        tools:ignore="ContentDescription" />

    <!-- filename (required by ResultsFragment.ListVH as vb.name) -->
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="IMG_20251014_123456.jpg" />

    <!-- meta line (required by ResultsFragment.ListVH as vb.meta) -->
    <TextView
        android:id="@+id/meta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3.4 MB â€¢ Oct 14, 2025" />

    <!-- subtle selection overlay (toggled by ResultsFragment) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33000000"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- trash badge (overlay, hidden by default; required as vb.badge) -->
    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/badge_trashed"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_badge"
        android:visibility="gone"
        android:layout_margin="6dp"
        app:layout_constraintTop_toTopOf="@id/thumb"
        app:layout_constraintStart_toStartOf="@id/thumb" />

    <!-- optional selection checkbox (overlay; ListVH discovers it by id 'check') -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:useMaterialThemeColors="true"
        app:layout_constraintTop_toTopOf="@id/thumb"
        app:layout_constraintEnd_toEndOf="@id/thumb" />

</androidx.constraintlayout.widget.ConstraintLayout>
