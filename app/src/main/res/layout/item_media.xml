<?xml version="1.0" encoding="utf-8"?>
<!-- root container for the entire list item -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="96dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:importantForAccessibility="yes">

    <!-- inner layout that holds the actual content of the item -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- thumbnail image wrapper using MaterialCardView for border -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thumb_wrapper"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:shapeAppearanceOverlay="@style/Shape.App.Corner.Small"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- main image thumbnail -->
            <ImageView
                android:id="@+id/thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <!-- checkbox for selecting the item -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="0dp"
            app:useMaterialThemeColors="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/thumb_wrapper"
            app:layout_constraintBottom_toBottomOf="@id/thumb_wrapper" />

        <!-- vertical layout for the file name, meta info, and badge -->
        <LinearLayout
            android:id="@+id/details_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintStart_toEndOf="@id/thumb_wrapper"
            app:layout_constraintEnd_toStartOf="@id/check"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- main file or media name -->
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="12sp"
                tools:text="IMG_1234.JPG" />

            <!-- metadata (date, size, etc.) below the name -->
            <TextView
                android:id="@+id/meta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="2025-10-24 10:30&#10;1.2 MB" />

            <!-- badge label for special states like “trashed” -->
            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/badge_trashed"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_badge_round"
                android:visibility="gone" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- overlay view for highlighting item when selected -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/selection_highlight"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
