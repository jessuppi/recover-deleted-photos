<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <FrameLayout
        android:id="@+id/thumb_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="1dp" 
        android:background="?attr/colorOutline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <ImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher_foreground"
            tools:ignore="ContentDescription" />
    </FrameLayout>
    
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/selection_highlight"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/thumb_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/thumb_wrapper"
        app:layout_constraintStart_toStartOf="@id/thumb_wrapper"
        app:layout_constraintEnd_toEndOf="@id/thumb_wrapper" />

    <FrameLayout
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_checkbox_halo"
        android:theme="@style/ThemeOverlay.App.Checkbox.Light"
        app:layout_constraintTop_toTopOf="@id/thumb_wrapper"
        app:layout_constraintEnd_toEndOf="@id/thumb_wrapper">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:useMaterialThemeColors="true" />
    </FrameLayout>

    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/badge_trashed"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_badge_round"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/thumb_wrapper"
        app:layout_constraintStart_toStartOf="@id/thumb_wrapper" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/thumb_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="IMG_20251014_123456.jpg" />

</androidx.constraintlayout.widget.ConstraintLayout>
