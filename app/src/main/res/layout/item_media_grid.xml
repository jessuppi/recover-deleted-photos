<?xml version="1.0" encoding="utf-8"?>
<!-- root container for a grid cell -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <!-- square thumbnail wrapper using materialcardview for a real 1dp stroke -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/thumb_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        app:shapeAppearanceOverlay="@style/Shape.App.Corner.Small"
        app:cardUseCompatPadding="false"
        app:cardPreventCornerOverlap="true"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1">

        <!-- main image thumbnail -->
        <ImageView
            android:id="@+id/thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher_foreground"
            tools:ignore="ContentDescription" />

        <!-- play icon overlay for videos -->
        <ImageView
            android:id="@+id/play_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_overlay"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />

        <!-- audio icon overlay for audio files -->
        <ImageView
            android:id="@+id/audio_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_audio_overlay"
            android:visibility="gone"
            tools:visibility="visible"
            tools:ignore="ContentDescription" />

        <!-- selection overlay that tints the thumb when selected -->
        <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/selection_highlight"
            android:visibility="gone" />

    </com.google.android.material.card.MaterialCardView>

    <!-- checkbox wrapper with halo background pinned to top-right of the thumb -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="6dp"
        android:background="@drawable/bg_checkbox_halo"
        android:theme="@style/ThemeOverlay.App.Checkbox.Light"
        app:layout_constraintTop_toTopOf="@id/thumb_wrapper"
        app:layout_constraintEnd_toEndOf="@id/thumb_wrapper">

        <!-- selection checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            app:buttonTint="@color/checkbox_tint_light_on_dark"
            app:useMaterialThemeColors="true" />
    </FrameLayout>

    <!-- small badge for states like trashed -->
    <TextView
        android:id="@+id/badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="@string/badge_trashed"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_badge_round"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/thumb_wrapper"
        app:layout_constraintStart_toStartOf="@id/thumb_wrapper" />

    <!-- optional one-line caption below the square thumb -->
    <TextView
        android:id="@+id/caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/thumb_wrapper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="IMG_20251014_123456.jpg" />

</androidx.constraintlayout.widget.ConstraintLayout>
