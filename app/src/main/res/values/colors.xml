<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ============================================================ -->
    <!-- LIGHT MODE COLORS ONLY                                       -->
    <!-- ============================================================ -->

    <!-- bright blue base used as the main seed color for material theme generation -->
    <color name="md_seed">#2962FF</color>

    <!-- primary vivid blue used for key brand elements and call-to-action buttons -->
    <color name="md_primary">#2962FF</color>

    <!-- secondary soft blue used for highlights and accent details -->
    <color name="md_secondary">#6C7BFF</color>

    <!-- dark blue tone used for key text (matches start scan button) -->
    <color name="md_blue_700">#1976D2</color>

    <!-- white surface background for screens and containers -->
    <color name="md_surface">#FFFFFF</color>

    <!-- near-black text and icon color used on light surfaces -->
    <color name="md_on_surface">#1C1B1F</color>

    <!-- medium gray line color for outlines and dividers -->
    <color name="md_outline">#79747E</color>

    <!-- very light gray surface variant used behind sorting bar and cards -->
    <color name="md_surface_variant">#F5F5F5</color>

    <!-- white background for the top toolbar area -->
    <color name="md_toolbar_background">#FFFFFF</color>

    <!-- near-black color for toolbar icons and text -->
    <color name="md_toolbar_tint">#1C1B1F</color>

    <!-- medium blue background used for adaptive app icons -->
    <color name="ic_launcher_background">#1976D2</color>

    <!-- translucent bright blue overlay to indicate selected tiles -->
    <color name="selection_highlight">#332196F3</color>

    <!-- strong red used for trash or deleted item badges -->
    <color name="badge_trash">#D93025</color>

    <!-- bright blue background for enabled recover button -->
    <color name="recover_button_enabled_bg">#1976D2</color>

    <!-- medium gray background for disabled recover button -->
    <color name="recover_button_disabled_bg">#BDBDBD</color>

    <!-- pure white text color for recover button labels -->
    <color name="recover_button_text">#FFFFFF</color>

    <!-- vivid neon green used for the final found file count -->
    <color name="md_green_A400">#76FF03</color>

    <!-- bright neon green midtone for scan success glow -->
    <color name="md_green_A200">#B2FF59</color>

    <!-- pale blue used for outer pulse gradient -->
    <color name="md_blue_50">#E8F0FE</color>

    <!-- soft blue midtone used for inner pulse gradient -->
    <color name="md_blue_200">#90CAF9</color>

    <!-- dark gray icons for grid/list toggle and other toolbar icons -->
    <color name="icon_grid">#1C1B1F</color>
    <color name="icon_list">#1C1B1F</color>

    <!-- ============================================================ -->
    <!-- CHECKBOX TINT COLORS FOR LIGHT BOX OUTLINE ON DARK BACKGROUND -->
    <!-- ============================================================ -->

    <selector xmlns:android="http://schemas.android.com/apk/res/android" name="checkbox_tint_light_on_dark">
        <!-- disabled -->
        <item android:state_enabled="false" android:color="?attr/colorOnSurface" />
        <!-- checked -->
        <item android:state_checked="true" android:color="?attr/colorPrimary" />
        <!-- unchecked default -->
        <item android:color="@android:color/white" />
    </selector>

</resources>
