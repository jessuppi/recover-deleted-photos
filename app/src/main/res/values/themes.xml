<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- base Material 3 DayNight theme with no Action Bar as we use a custom Toolbar in activity_main.xml managed by MainActivity.kt -->
    <style name="Theme.RecoverDeletedPhotos" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- brand and surface colors -->
        <item name="colorPrimary">@color/md_seed</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorOutline">@color/md_outline</item>

        <!-- Ensures all MaterialToolbars inherit this style by default. -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Tinted</item>
        
    </style>

    <!-- Custom style inheriting a base Material 3 Toolbar. 
         NOTE: Icon/text colors are applied directly in the activity_main.xml layout 
         via 'app:actionMenuIconTint' to ensure visibility. -->
    <style name="Widget.App.Toolbar.Tinted" parent="Widget.Material3.Toolbar">

    </style>

</resources>
