<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- material 3 base; follows system light/dark automatically -->
    <style name="Theme.RecoverDeletedPhotos" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- brand + core surfaces (kept small and generic) -->
        <item name="colorPrimary">@color/md_seed</item>
        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorOutline">@color/md_outline</item>

        <!-- status/navigation bars aligned to surface (common good default) -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:navigationBarColor" tools:targetApi="o">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

</resources>
